<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_shape_white"
    android:gravity="center"
    android:padding="@dimen/default_load_more_padding">

    <ProgressBar
        android:id="@+id/loading_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_load_more_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_load_more_text_left_padding"
        android:textSize="@dimen/text_size_x_small_dp"
        android:visibility="gone"
        tools:text="点击加载更多" />
</LinearLayout>
